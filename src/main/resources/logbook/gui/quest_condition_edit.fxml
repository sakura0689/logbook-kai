<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600.0" prefWidth="750.0" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="logbook.internal.gui.QuestConditionEditController">
   <children>
      <VBox spacing="5.0">
         <children>
            <Label text="任務" />
            <ComboBox fx:id="questSelector" prefWidth="550.0" />
         </children>
      </VBox>
      <TitledPane animated="false" text="基本設定">
        <content>
          <VBox spacing="5.0">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label text="種類" />
                        <Label fx:id="questType" text="-" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label text="任務タイプ" />
                        <ComboBox fx:id="resetType" prefWidth="150.0" />
                        <Label text="月(イヤリー)" />
                        <TextField fx:id="yearlyResetMonth" prefWidth="50.0" />
                     </children>
                  </HBox>
               </children>
            </VBox>
        </content>
      </TitledPane>
      <TitledPane animated="false" text="フィルタ">
        <content>
          <VBox spacing="5.0">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label text="海域" />
                        <TextField fx:id="filterArea" promptText="例: 1-1, 1-2" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label text="艦隊条件" />
                        <Button mnemonicParsing="false" onAction="#showShipTypeList" text="艦種一覧" />
                     </children>
                  </HBox>
                  <VBox fx:id="fleetConditionsBox" spacing="5.0" />
                  <Button mnemonicParsing="false" onAction="#addFleetCondition" text="艦隊条件追加" />
               </children>
            </VBox>
        </content>
      </TitledPane>
      <TitledPane animated="false" collapsible="false" text="達成条件" VBox.vgrow="ALWAYS">
         <content>
            <VBox spacing="5.0">
               <children>
                  <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                     <content>
                        <VBox fx:id="conditionsBox" spacing="5.0" />
                     </content>
                  </ScrollPane>
               </children>
            </VBox>
         </content>
      </TitledPane>
      <HBox alignment="CENTER_RIGHT" spacing="10.0">
         <children>
            <Button mnemonicParsing="false" onAction="#save" text="保存" />
         </children>
      </HBox>
   </children>
</VBox>
